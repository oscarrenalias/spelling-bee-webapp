{
  "version": "v2",
  "sourceVersion": "scowl+wordfreq",
  "sourceWordLists": [
    {
      "path": "data/raw/sources/scowl.txt",
      "optional": true
    },
    {
      "path": "data/raw/dictionary-base.txt",
      "optional": false
    }
  ],
  "frequency": {
    "enabled": true,
    "path": "data/raw/sources/wordfreq.tsv",
    "format": "tsv",
    "wordColumn": "word",
    "zipfColumn": "zipf",
    "minZipf": 3.5,
    "requireScore": false,
    "optional": true
  },
  "includeCommonInflections": true,
  "minimumLength": 4,
  "excludeProfanity": true,
  "excludeGeoTerms": true,
  "excludeDemonyms": true,
  "excludeRare": true,
  "profanity": ["damn", "hell", "shit", "crap"],
  "geoTerms": ["england", "brazil", "argentina", "chile"],
  "demonyms": ["american", "mexican", "canadian", "chilean", "french"],
  "rareTerms": ["anele", "calera", "taler"],
  "blockedPatterns": ["^[a-z]{1,3}$"]
}
